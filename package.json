{
  "name": "open-micro-saas",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write --ignore-path .gitignore .",
    "prepare": "husky install",
    "test": "playwright test --max-failures=1",
    "test:ui": "playwright test --ui",
    "test:db:start": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:prepare": "dotenv -e .env.test prisma migrate deploy",
    "test:db:migrate": "dotenv -e .env.test prisma migrate dev",
    "db:start": "docker-compose up -d",
    "db:migrate:dev": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:seed": "prisma db seed",
    "script:create:admin": "dotenv tsx ./scripts/create-admin-user-script.ts"
  },
  "prisma": {
